<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="view_website_form" model="ir.ui.view">
        <field name="model">website</field>
        <field name="inherit_id" ref="website.view_website_form" />
        <field name="arch" type="xml">
            <xpath expr="//group[@name='other']" position="inside">
                <group>
                    <field name="has_matomo_analytics" />
                    <field
                        name="matomo_analytics_host"
                        attrs="{'invisible': [('has_matomo_analytics','=',False)], 'required': [('has_matomo_analytics','=',True)]}"
                    />
                    <field
                        name="matomo_analytics_id"
                        attrs="{'invisible': [('has_matomo_analytics','=',False)], 'required': [('has_matomo_analytics','=',True)]}"
                    />
                </group>
            </xpath>
        </field>
    </record>
</odoo>
